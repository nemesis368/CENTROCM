<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp">

        <View
            android:id="@+id/headerBg"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@drawable/bg_header_curve"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivUserIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@android:drawable/sym_def_app_icon"
            app:tint="#DCC89E"
            android:background="@drawable/bg_card_selector"
            android:padding="10dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hola, Bienvenido"
            android:textColor="#DCC89E"
            android:textSize="16sp"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@id/ivUserIcon"
            app:layout_constraintTop_toTopOf="@id/ivUserIcon" />

        <TextView
            android:id="@+id/tvBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Centro Miraflores"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@id/ivUserIcon"
            app:layout_constraintTop_toBottomOf="@id/tvWelcome" />

        <androidx.cardview.widget.CardView
            android:id="@+id/btnIA"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="12dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:layout_constraintTop_toBottomOf="@id/ivUserIcon">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_card_gradient">

                <ImageView
                    android:id="@+id/iconIA"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@android:drawable/ic_btn_speak_now"
                    app:tint="#DCC89E"
                    android:layout_marginStart="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Asistente Virtual"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="15dp"
                    app:layout_constraintStart_toEndOf="@id/iconIA"
                    app:layout_constraintTop_toTopOf="@id/iconIA" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvServices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Servicios Rápidos"
            android:textColor="#333333"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@id/btnIA"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/layoutRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/tvServices">

            <androidx.cardview.widget.CardView
                android:id="@+id/btnAgenda"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@android:drawable/ic_menu_my_calendar"
                        app:tint="#5C0E27" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Agendar\nCita"
                        android:textColor="#5C0E27"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnMapa"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@android:drawable/ic_dialog_map"
                        app:tint="#5C0E27" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ubicación\nSede"
                        android:textAlignment="center"
                        android:textColor="#5C0E27"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:id="@+id/btnCerrarSesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cerrar Sesión"
            android:textColor="#B71C1C"
            android:textSize="15sp"
            android:textStyle="bold"
            android:padding="12dp"
            android:drawableStart="@android:drawable/ic_lock_power_off"
            android:drawableTint="#B71C1C"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:background="@drawable/bg_card_selector"
            app:layout_constraintTop_toBottomOf="@id/layoutRow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
