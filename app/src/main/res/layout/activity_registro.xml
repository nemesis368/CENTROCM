<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/maroon_primary"
    android:padding="30dp">

    <TextView
        android:text="Crear Cuenta"
        android:textColor="@color/gold_accent"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Campo 1: Nombre -->
    <EditText
        android:id="@+id/etNombre"
        android:hint="Nombre Completo"
        android:background="@drawable/bg_boton_gradiente"
        android:backgroundTint="#DCC89E"
        android:padding="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Campo 2: Teléfono -->
    <EditText
        android:id="@+id/etTelefono"
        android:hint="Teléfono"
        android:inputType="phone"
        android:background="@drawable/bg_boton_gradiente"
        android:backgroundTint="#DCC89E"
        android:padding="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Campo 3: Correo -->
    <EditText
        android:id="@+id/etCorreo"
        android:hint="Correo Electrónico"
        android:inputType="textEmailAddress"
        android:background="@drawable/bg_boton_gradiente"
        android:backgroundTint="#DCC89E"
        android:padding="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Campo 4: Usuario -->
    <EditText
        android:id="@+id/etUsuarioRegistro"
        android:hint="Usuario (Nick)"
        android:background="@drawable/bg_boton_gradiente"
        android:backgroundTint="#DCC89E"
        android:padding="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Campo 5: Contraseña -->
    <EditText
        android:id="@+id/etPassRegistro"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:background="@drawable/bg_boton_gradiente"
        android:backgroundTint="#DCC89E"
        android:padding="15dp"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnRegistrar"
        android:text="REGISTRARSE"
        android:background="@drawable/bg_boton_gradiente"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

</LinearLayout>
