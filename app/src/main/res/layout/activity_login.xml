<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A1A1A">

    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_tarjeta_vino"
        android:alpha="0.6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_sombra_vino"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/ivLogoGif"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="35dp"
        android:contentDescription="Logo Principal"
        android:src="@drawable/loginn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvTituloApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CENTRO COMUNITARIO CCM"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:letterSpacing="0.05"
        android:shadowColor="#80000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/ivLogoGif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvSlogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&quot;Conectando personas, construyendo futuro.&quot;"
        android:textColor="#DDDDDD"
        android:textStyle="italic"
        android:textSize="13sp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloApp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/layoutToggle"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_toggle_outline"
        android:padding="3dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvSlogan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvTabCliente"
            android:text="CLIENTE"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingHorizontal="30dp"
            android:background="@drawable/selector_toggle_tab"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tvTabAdmin"
            android:text="ADMIN"
            android:textColor="#AAAAAA"
            android:gravity="center"
            android:paddingHorizontal="30dp"
            android:background="@drawable/selector_toggle_tab"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/bg_glass_card"
        android:paddingVertical="30dp"
        android:paddingHorizontal="24dp"
        android:elevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutToggle"
        app:layout_constraintVertical_bias="0.4">

        <TextView
            android:id="@+id/tvLoginHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido"
            android:textColor="#333333"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvLoginSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingresa con tu cuenta Firebase"
            android:textColor="#666666"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLoginHeader"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:hintEnabled="false"
            app:startIconDrawable="@android:drawable/ic_menu_my_calendar"
            app:startIconTint="@color/vino_primary"
            app:boxStrokeColor="@color/vino_primary"
            app:layout_constraintTop_toBottomOf="@id/tvLoginSub">

            <EditText
                android:id="@+id/etUser"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_input_borde"
                android:hint="Correo Electrónico"
                android:textColor="#333"
                android:textColorHint="#999"
                android:paddingStart="10dp"
                android:textSize="14sp"
                android:inputType="textEmailAddress"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:hintEnabled="false"
            app:startIconDrawable="@android:drawable/ic_lock_idle_lock"
            app:startIconTint="@color/vino_primary"
            app:endIconMode="password_toggle"
            app:endIconTint="#555"
            app:layout_constraintTop_toBottomOf="@id/tilUser">

            <EditText
                android:id="@+id/etPass"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_input_borde"
                android:hint="Contraseña"
                android:textColor="#333"
                android:textColorHint="#999"
                android:paddingStart="10dp"
                android:textSize="14sp"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:text="ACCEDER"
            android:background="@drawable/bg_boton_ripple"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            android:elevation="4dp"
            android:stateListAnimator="@null"
            app:layout_constraintTop_toBottomOf="@id/tilPass"/>

        <TextView
            android:id="@+id/tvRegistrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="¿No tienes cuenta? Regístrate aquí"
            android:textColor="@color/vino_primary"
            android:textStyle="bold"
            android:textSize="13sp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/btnLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Centro Comunitario CCM v1.0"
        android:textColor="#66FFFFFF"
        android:textSize="12sp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
