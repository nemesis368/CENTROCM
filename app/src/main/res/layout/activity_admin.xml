<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/white"
    android:padding="30dp">

    <TextView
        android:text="ADMINISTRADOR"
        android:gravity="center"
        android:textColor="@color/gold_accent"
        android:textSize="32sp"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:layout_marginBottom="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnOdontologia"
        android:text="ODONTOLOGÍA"
        android:background="@drawable/bg_boton_gradiente"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="25dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnPsicologia"
        android:text="PSICOLOGÍA"
        android:background="@drawable/bg_boton_gradiente"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="25dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnConsultaGeneral"
        android:text="CONSULTA GENERAL"
        android:background="@drawable/bg_boton_gradiente"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>

    <!-- NUEVO: BOTÓN DE CERRAR SESIÓN (ROJO) -->
    <TextView
        android:id="@+id/btnCerrarSesionAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerrar Sesión"
        android:textColor="#B71C1C"
        android:textStyle="bold"
        android:textSize="16sp"
        android:padding="15dp"
        android:layout_marginTop="40dp"/>

</LinearLayout>