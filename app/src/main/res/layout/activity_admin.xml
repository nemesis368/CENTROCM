<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3E0018">

    <ImageView
        android:id="@+id/bgWaves"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/header_waves"
        android:alpha="0.6"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvAdminLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MODO ADMINISTRADOR"
        android:textColor="#DCC89E"
        android:textSize="12sp"
        android:letterSpacing="0.2"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Panel de Control"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/tvAdminLabel"
        app:layout_constraintTop_toBottomOf="@id/tvAdminLabel"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_account"
        app:tint="#DCC89E"
        android:background="@drawable/bg_input_glass_gold"
        android:padding="12dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvAdminLabel"
        app:layout_constraintBottom_toBottomOf="@id/tvTitle"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingBottom="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEPARTAMENTOS"
                android:textColor="#80FFFFFF"
                android:textSize="12sp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="8dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnOdontologia"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#25000000"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginBottom="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_input_glass_gold"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/iconOdonto"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_tooth"
                        app:tint="#DCC89E"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ODONTOLOGÍA"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginStart="20dp"
                        app:layout_constraintStart_toEndOf="@id/iconOdonto"
                        app:layout_constraintTop_toTopOf="@id/iconOdonto"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gestión dental"
                        android:textColor="#DCC89E"
                        android:textSize="14sp"
                        android:layout_marginStart="20dp"
                        app:layout_constraintStart_toEndOf="@id/iconOdonto"
                        app:layout_constraintTop_toBottomOf="@id/iconOdonto"
                        android:layout_marginTop="-5dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_media_play"
                        app:tint="#80DCC89E"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnPsicologia"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#25000000"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginBottom="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_input_glass_gold"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/iconPsico"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_psychology"
                        app:tint="#DCC89E"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PSICOLOGÍA"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginStart="20dp"
                        app:layout_constraintStart_toEndOf="@id/iconPsico"
                        app:layout_constraintTop_toTopOf="@id/iconPsico"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salud mental"
                        android:textColor="#DCC89E"
                        android:textSize="14sp"
                        android:layout_marginStart="20dp"
                        app:layout_constraintStart_toEndOf="@id/iconPsico"
                        app:layout_constraintTop_toBottomOf="@id/iconPsico"
                        android:layout_marginTop="-5dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_media_play"
                        app:tint="#80DCC89E"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnConsultaGeneral"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#25000000"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginBottom="30dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_input_glass_gold"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/iconGeneral"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_medical"
                        app:tint="#DCC89E"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CONSULTA GENERAL"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginStart="20dp"
                        app:layout_constraintStart_toEndOf="@id/iconGeneral"
                        app:layout_constraintTop_toTopOf="@id/iconGeneral"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medicina familiar"
                        android:textColor="#DCC89E"
                        android:textSize="14sp"
                        android:layout_marginStart="20dp"
                        app:layout_constraintStart_toEndOf="@id/iconGeneral"
                        app:layout_constraintTop_toBottomOf="@id/iconGeneral"
                        android:layout_marginTop="-5dp"/>

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_media_play"
                        app:tint="#80DCC89E"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/btnCerrarSesionAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cerrar Sesión"
                android:textAlignment="center"
                android:textColor="#FFBABA"
                android:textStyle="bold"
                android:background="@drawable/bg_boton_gradiente"
                android:backgroundTint="#40000000"
                android:padding="16dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>