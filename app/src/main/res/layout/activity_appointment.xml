<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3E0018"
    tools:context=".ui.AppointmentActivity">

    <ImageView
        android:id="@+id/bgWaves"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:scaleType="centerCrop"
        android:src="@drawable/header_waves"
        android:alpha="0.5"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@android:drawable/ic_menu_revert"
        app:tint="#DCC89E"
        android:background="@drawable/bg_input_glass_gold"
        android:padding="12dp"
        android:rotation="180"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/title_appointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NUEVA CITA"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/btnBack"
        app:layout_constraintTop_toBottomOf="@id/btnBack"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/title_appointment"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="32dp"
            android:paddingBottom="80dp"
            android:gravity="center_horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="50dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp">
                <ImageView
                    android:id="@+id/ivHeaderGif"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/dos"/>
            </androidx.cardview.widget.CardView>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Tipo de Servicio" android:textColor="#DCC89E" android:textSize="12sp" android:layout_marginBottom="4dp"/>
            <FrameLayout android:layout_width="match_parent" android:layout_height="50dp" android:background="@drawable/bg_input_glass_gold" android:layout_marginBottom="12dp">
                <Spinner android:id="@+id/spinner_service" android:layout_width="match_parent" android:layout_height="match_parent" android:paddingStart="10dp" android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" android:spinnerMode="dropdown"/>
            </FrameLayout>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Nombre del Cliente" android:textColor="#DCC89E" android:textSize="12sp" android:layout_marginBottom="4dp"/>
            <EditText android:id="@+id/input_appointment_client_name" android:layout_width="match_parent" android:layout_height="50dp" android:background="@drawable/bg_input_glass_gold" android:hint="Nombre completo" android:textColorHint="#80FFFFFF" android:textColor="#FFFFFF" android:paddingStart="15dp" android:layout_marginBottom="12dp"/>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="12dp">
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:layout_marginEnd="8dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Edad" android:textColor="#DCC89E" android:textSize="12sp" android:layout_marginBottom="4dp"/>
                    <EditText android:id="@+id/input_appointment_age" android:layout_width="match_parent" android:layout_height="50dp" android:background="@drawable/bg_input_glass_gold" android:hint="Años" android:textColorHint="#80FFFFFF" android:textColor="#FFFFFF" android:inputType="number" android:paddingStart="15dp"/>
                </LinearLayout>
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.5" android:orientation="vertical" android:layout_marginStart="8dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Teléfono" android:textColor="#DCC89E" android:textSize="12sp" android:layout_marginBottom="4dp"/>
                    <EditText android:id="@+id/input_appointment_phone" android:layout_width="match_parent" android:layout_height="50dp" android:background="@drawable/bg_input_glass_gold" android:hint="55.." android:textColorHint="#80FFFFFF" android:textColor="#FFFFFF" android:inputType="phone" android:paddingStart="15dp"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="12dp">
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:layout_marginEnd="8dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Fecha" android:textColor="#DCC89E" android:textSize="12sp" android:layout_marginBottom="4dp"/>
                    <EditText android:id="@+id/input_appointment_date" android:layout_width="match_parent" android:layout_height="50dp" android:background="@drawable/bg_input_glass_gold" android:hint="DD/MM/AA" android:textColorHint="#80FFFFFF" android:textColor="#FFFFFF" android:paddingStart="15dp" android:clickable="true" android:focusable="false" android:drawableEnd="@drawable/ic_calendar" android:drawableTint="#DCC89E" android:paddingEnd="12dp"/>
                </LinearLayout>
                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:layout_marginStart="8dp">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Hora" android:textColor="#DCC89E" android:textSize="12sp" android:layout_marginBottom="4dp"/>
                    <EditText android:id="@+id/input_appointment_time" android:layout_width="match_parent" android:layout_height="50dp" android:background="@drawable/bg_input_glass_gold" android:hint="00:00" android:textColorHint="#80FFFFFF" android:textColor="#FFFFFF" android:paddingStart="15dp" android:clickable="true" android:focusable="false" android:drawableEnd="@drawable/ic_time" android:drawableTint="#DCC89E" android:paddingEnd="12dp"/>
                </LinearLayout>
            </LinearLayout>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Notas" android:textColor="#DCC89E" android:textSize="12sp" android:layout_marginBottom="4dp"/>
            <EditText android:id="@+id/input_appointment_notes" android:layout_width="match_parent" android:layout_height="80dp" android:background="@drawable/bg_input_glass_gold" android:hint="Detalles..." android:textColorHint="#80FFFFFF" android:textColor="#FFFFFF" android:inputType="textMultiLine" android:gravity="top|start" android:padding="15dp" android:layout_marginBottom="30dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_save_appointment"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="CONFIRMAR CITA"
                android:background="@drawable/bg_boton_gradiente"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:elevation="8dp"
                android:stateListAnimator="@null"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>